<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llInternet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundal_colturirotunde"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_dialog_alert"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:id="@+id/tvTitluInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Conexiune invalida"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTextInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:padding="8dp"
        android:text="Pentru a juca, asigurati-va ca aveti o conexiune stabila la internet!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
</androidx.appcompat.widget.LinearLayoutCompat>